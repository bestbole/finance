<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.myself.finance.mapper.AccountDetailMapper">
	<resultMap type="com.myself.finance.entity.AccountDetail" id="accountDetailResult">
		<id column="ID" property="id" jdbcType="VARCHAR" />
		<id column="USER_ID" property="userId" jdbcType="VARCHAR" />
<result column="NAME" property="name" jdbcType="VARCHAR" />
<result column="STATUS" property="status" jdbcType="VARCHAR" />
<result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
<result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP" />
<result column="REMARKS" property="remarks" jdbcType="VARCHAR" />
<result column="TITLE" property="title" jdbcType="VARCHAR" />
<result column="LEVEL" property="level" jdbcType="VARCHAR" />
<result column="YEAR_RATE" property="yearRate" jdbcType="NUMERIC" />
<result column="MONEY" property="money" jdbcType="NUMERIC" />
<result column="TERM" property="term" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getData" resultMap="accountDetailResult">
		SELECT * FROM PRODUCT WHERE ID=#{id, jdbcType=VARCHAR}
	</select>
	<select id="query" resultMap="accountDetailResult">
		SELECT * FROM PRODUCT 
		<where>
<if test="entity.name != null and entity.name != ''">
	and NAME = #{entity.name}
</if>
<if test="entity.status != null and entity.status != ''">
	and STATUS = #{entity.status}
</if>
<if test="entity.createTime != null and entity.createTime != ''">
	and to_char(CREATE_TIME, 'YYYY-MM-DD') = #{entity.createTime}
</if>
</where> 
		order by CREATE_TIME desc
	</select>
	
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO ACCOUNT_DETAIL (ID, ACCOUNT_ID, NAME, STATUS, TYPE, AMOUNT, CREATE_TIME, REMARKS)
		VALUES (
#{id, jdbcType=VARCHAR},
#{accountId, jdbcType=VARCHAR},
#{name, jdbcType=VARCHAR},
#{status, jdbcType=VARCHAR},
#{type, jdbcType=VARCHAR},
#{amount, jdbcType=NUMERIC},
#{createTime, jdbcType=TIMESTAMP},
#{remarks, jdbcType=VARCHAR})
	</insert>
</mapper>